@page
@using Optional.Unsafe
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "_StaticLayout";
}
<div class="page-header">
    <h1>Something went wrong.</h1>
</div>
<div class="row">
    <div class="col-md-4"><img src="~/images/error.jpg" alt="rotten strawberry" class="img-responsive" /></div>
    <div class="col-md-8">
        <h3>An error occurred while processing your request.</h3>
        <p>Please contact our support department so we can find a solution. </p>
        @if (Model.RequestId.HasValue)
        {
            <p>The following request identifier will help us locating the problem: </p>
            <p><kbd>@Model.RequestId.ValueOrFailure()</kbd></p>
        }
        <h3>You can <a href="javascript:history.go(-1)">go back</a> or start again from the <a asp-page="/Index">home page</a>.</h3>
    </div>
</div>
