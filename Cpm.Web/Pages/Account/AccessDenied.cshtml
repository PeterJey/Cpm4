@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
    Layout = "_StaticLayout";
}
<div class="page-header">
    <h1 class="text-danger">@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col-md-4"><img src="~/images/denied.jpg" alt="rotten strawberry" class="img-responsive" /></div>
    <div class="col-md-8">
        <h3 class="text-danger">You do not have access to this resource.</h3>
        <ul class="">
            <li>If you have used a link from your browser's history or one copied and pasted from somewhere, it is referencing the resource you are not permitted to use.</li>
            <li>If you think you should be able to access got here by just using the app, please let our support team know. We may be able to fix this problem, so it won't happen again.</li>
        </ul>
        <h3>You can <a href="javascript:history.go(-1)">go back</a> or start again from the <a asp-page="/Index">home page</a>.</h3>
    </div>
</div>
