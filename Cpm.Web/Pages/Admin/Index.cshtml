@page
@model Cpm.Web.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<div class="page-header">
    <ol class="breadcrumb">
        <li><a asp-page="/Dashboard">Dashboard</a></li>
        <li class="active">Admin</li>
    </ol><h2>@ViewData["Title"]</h2>
</div>
@Html.Raw(Model.LoadStatusHtml())


<div class="list-group">
    @if (Model.IsUsersLinkVisible)
    {
        <a asp-page="./Users/Index" class="list-group-item">
            <h4 class="list-group-item-heading">Users</h4>
            <p class="list-group-item-text">Create new users and modify existing, suspend and cancel suspension.</p>
        </a>
    }
    @if (Model.IsFarmsLinkVisible)
    {
        <a asp-page="./Farms/Index" class="list-group-item">
            <h4 class="list-group-item-heading">Farms</h4>
            <p class="list-group-item-text">Create new farms.</p>
        </a>
    }
    @if (Model.IsProfilesLinkVisible)
    {
        <a asp-page="./Profiles/Index" class="list-group-item">
            <h4 class="list-group-item-heading">Profiles</h4>
            <p class="list-group-item-text">Manage forecast profiles.</p>
        </a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
